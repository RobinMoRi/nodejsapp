extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://www.queness.com/resources/images/png/apple_web.png", alt="A book")
                        .card__content
                            h2.product__price $16.99
                            p.product__description A very interesting book
                        .card__actions
                            button.btn Add to cart
        else
            h1 No products has been added!